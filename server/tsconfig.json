{
  "compilerOptions": {
    "rootDir": "./",
    "module": "Node16",
    "target": "ES2022",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "types": [
      "node",
      "./types/express"
    ]
  },
  "include": [
    "./**/*.ts",
    "./types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}